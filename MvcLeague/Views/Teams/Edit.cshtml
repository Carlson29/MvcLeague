@model MvcLeague.Models.Team

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="teamId" />
            <div class="form-group">
                <label asp-for="league" class="control-label"></label>
                <input asp-for="league" class="form-control" />
                <span asp-validation-for="league" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="throphies" class="control-label"></label>
                <input asp-for="throphies" class="form-control" />
                <span asp-validation-for="throphies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="marketValue" class="control-label"></label>
                <input asp-for="marketValue" class="form-control" />
                <span asp-validation-for="marketValue" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="teamName" class="control-label"></label>
                <input asp-for="teamName" class="form-control" />
                <span asp-validation-for="teamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
